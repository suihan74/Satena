<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="vm"
                type="com.suihan74.satena.scenes.preferences.pages.PreferencesFontsViewModel" />
    </data>

    <ScrollView
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@drawable/scrollbar_thumb"
        android:scrollbarSize="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingEnd="16dp"
                android:paddingStart="15dp"
                android:orientation="vertical">

            <TextView
                    android:text="@string/pref_fonts_entry_title_desc"
                    android:textColor="?attr/textColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@{vm.entryTitle.information}"
                    app:textSizeSp="@{vm.entryTitle.size}"
                    app:fontFamily="@{vm.entryTitle}"
                    android:textColor="?attr/textColor"
                    android:layout_marginTop="8dp"
                    android:paddingStart="6dp"
                    android:paddingEnd="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <Button
                    android:id="@+id/testButton"
                    android:text="test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@string/pref_fonts_bookmark_user_desc"
                    android:textColor="?attr/textColor"
                    android:layout_marginTop="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@{vm.bookmarkUser.information}"
                    app:textSizeSp="@{vm.bookmarkUser.size}"
                    android:textColor="?attr/textColor"
                    android:layout_marginTop="8dp"
                    android:paddingStart="6dp"
                    android:paddingEnd="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@string/pref_fonts_bookmark_comment_desc"
                    android:textColor="?attr/textColor"
                    android:layout_marginTop="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@{vm.bookmarkComment.information}"
                    app:textSizeSp="@{vm.bookmarkComment.size}"
                    android:textColor="?attr/textColor"
                    android:layout_marginTop="8dp"
                    android:paddingStart="6dp"
                    android:paddingEnd="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>
</layout>
