<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.suihan74.satena.models.AppUpdateNoticeMode"/>
        <variable
                name="vm"
                type="com.suihan74.satena.scenes.preferences.pages.PreferencesGeneralsViewModel" />
    </data>

    <ScrollView
            android:scrollbars="vertical"
            android:scrollbarThumbVertical="@drawable/scrollbar_thumb"
            android:scrollbarSize="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingEnd="16dp"
                android:paddingStart="15dp"
                android:orientation="vertical">

            <TextView
                    android:text="@string/pref_generals_theme_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <Button
                    android:id="@+id/app_theme_button"
                    style="?buttonStyle"
                    android:text="@{vm.theme.textId}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@string/pref_generals_dialog_theme_desc"
                    android:layout_marginTop="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <Button
                    android:id="@+id/dialog_theme_button"
                    style="?buttonStyle"
                    android:text="@{vm.dialogTheme.textId}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@string/pref_generals_close_dialog_touch_outside_desc"
                    android:layout_marginTop="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ToggleButton
                    android:id="@+id/toggle_close_dialog_on_touch_outside"
                    style="?toggleButtonStyle"
                    android:checked="@={vm.closeDialogOnTouchOutside}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@string/pref_generals_drawer_gravity_desc"
                    android:layout_marginTop="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ToggleButton
                    android:id="@+id/toggle_drawer_gravity"
                    style="?toggleButtonStyle"
                    drawerGravity="@={vm.drawerGravity}"
                    android:textOff="@string/pref_generals_drawer_gravity_right"
                    android:textOn="@string/pref_generals_drawer_gravity_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@string/pref_generals_app_update_notice_mode_desc"
                    android:layout_marginTop="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <Button
                    android:id="@+id/button_app_update_notice_mode"
                    style="?buttonStyle"
                    android:text='@{vm.appUpdateNoticeMode.textId}'
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:visibility="@{vm.appUpdateNoticeMode != AppUpdateNoticeMode.NONE}"
                    android:text="@string/pref_generals_notice_ignored_app_update_desc"
                    android:layout_marginTop="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ToggleButton
                    style="?toggleButtonStyle"
                    android:visibility="@{vm.appUpdateNoticeMode != AppUpdateNoticeMode.NONE}"
                    android:checked="@={vm.noticeIgnoredAppUpdate}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@string/pref_generals_using_termination_dialog_desc"
                    android:layout_marginTop="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ToggleButton
                    android:id="@+id/toggle_using_termination_dialog"
                    style="?toggleButtonStyle"
                    android:checked="@={vm.confirmTerminationDialog}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@string/pref_generals_notices_last_seen_updatable_desc"
                    android:layout_marginTop="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ToggleButton
                    android:id="@+id/toggle_notices_last_seen_updatable"
                    style="?toggleButtonStyle"
                    android:checked="@={vm.noticesLastSeenUpdatable}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@string/pref_generals_background_checking_notices_desc"
                    android:layout_marginTop="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ToggleButton
                    android:id="@+id/toggle_background_checking_notices"
                    style="?toggleButtonStyle"
                    android:checked="@={vm.checkNotices}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@string/pref_generals_checking_notices_intervals_desc"
                    android:layout_marginTop="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <Button
                    android:id="@+id/button_checking_notices_interval"
                    style="?buttonStyle"
                    android:text='@{vm.checkNoticesInterval + @string/minutes}'
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@string/pref_generals_ignore_notices_from_spam_desc"
                    android:layout_marginTop="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ToggleButton
                    style="?toggleButtonStyle"
                    android:checked="@={vm.ignoreNoticesToSilentBookmark}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@string/pref_generals_show_release_notes_after_update_desc"
                    android:layout_marginTop="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ToggleButton
                    android:id="@+id/toggle_display_release_notes_after_update"
                    style="?toggleButtonStyle"
                    android:checked="@={vm.displayReleaseNotes}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="@string/pref_generals_clear_image_cache_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        sizeText="@{vm.imageCacheSize}"
                        unit="@{`B`}"
                        android:layout_marginStart="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <Button
                    android:id="@+id/clear_image_cache_button"
                    android:text="@string/pref_generals_clear_image_cache_button"
                    style="?buttonStyle"
                    app:backgroundTint="@color/colorAccent"
                    android:textColor="@color/colorPrimaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>
</layout>
