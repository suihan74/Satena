<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingVertical="@dimen/add_star_popup_vertical_padding"
        android:paddingHorizontal="@dimen/add_star_popup_horizontal_padding"
        android:background="?popupMenuBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageButton
            android:id="@+id/add_blue_star"
            app:srcCompat="@drawable/ic_add_star_filled"
            android:tint="@color/starBlue"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@null"
            android:layout_toStartOf="@id/add_red_star"
            android:layout_width="@dimen/add_star_button_size"
            android:layout_height="@dimen/add_star_button_size"/>

    <TextView
            android:id="@+id/stars_count_blue"
            android:textSize="12sp"
            android:textColor="@color/starBlue"
            android:textAlignment="center"
            android:layout_below="@id/add_blue_star"
            android:layout_alignStart="@id/add_blue_star"
            android:layout_alignEnd="@id/add_blue_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageButton
            android:id="@+id/add_red_star"
            app:srcCompat="@drawable/ic_add_star_filled"
            android:tint="@color/starRed"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@null"
            android:layout_marginStart="@dimen/add_star_button_margin"
            android:layout_toStartOf="@id/add_green_star"
            android:layout_width="@dimen/add_star_button_size"
            android:layout_height="@dimen/add_star_button_size"/>

    <TextView
            android:id="@+id/stars_count_red"
            android:textSize="12sp"
            android:textColor="@color/starRed"
            android:textAlignment="center"
            android:layout_below="@id/add_red_star"
            android:layout_alignStart="@id/add_red_star"
            android:layout_alignEnd="@id/add_red_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageButton
            android:id="@+id/add_green_star"
            app:srcCompat="@drawable/ic_add_star_filled"
            android:tint="@color/starGreen"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@null"
            android:layout_marginStart="@dimen/add_star_button_margin"
            android:layout_toStartOf="@id/add_yellow_star"
            android:layout_width="@dimen/add_star_button_size"
            android:layout_height="@dimen/add_star_button_size"/>

    <TextView
            android:id="@+id/stars_count_green"
            android:textSize="12sp"
            android:textColor="@color/starGreen"
            android:textAlignment="center"
            android:layout_below="@id/add_green_star"
            android:layout_alignStart="@id/add_green_star"
            android:layout_alignEnd="@id/add_green_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageButton
            android:id="@+id/add_yellow_star"
            app:srcCompat="@drawable/ic_add_star_filled"
            android:tint="@color/starYellow"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@null"
            android:layout_marginStart="@dimen/add_star_button_margin"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/add_star_button_size"
            android:layout_height="@dimen/add_star_button_size"/>

    <TextView
            android:id="@+id/stars_count_yellow"
            android:text="@string/infinite"
            android:textSize="12sp"
            android:textColor="@color/starYellow"
            android:textAlignment="center"
            android:layout_below="@id/add_yellow_star"
            android:layout_alignStart="@id/add_yellow_star"
            android:layout_alignEnd="@id/add_yellow_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>
