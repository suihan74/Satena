<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="?colorPrimary"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

    <ImageButton
            android:id="@+id/bookmark_button"
            android:src="@drawable/ic_baseline_bookmark"
            android:background="?colorPrimary"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@null"/>

    <ImageButton
            android:id="@+id/show_bookmarks_button"
            android:src="@drawable/ic_baseline_chat_bubble"
            android:background="?colorPrimary"
            android:layout_toEndOf="@id/bookmark_button"
            android:layout_alignTop="@id/bookmark_button"
            android:layout_marginStart="40dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@null"/>

</RelativeLayout>
