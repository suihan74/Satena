<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="?android:attr/selectableItemBackground">

    <ImageView
            android:id="@+id/star_user_icon"
            android:contentDescription="@null"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"/>

    <LinearLayout
            android:id="@+id/star_name_area"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/star_user_icon"
            android:layout_toEndOf="@id/star_user_icon">

        <TextView
                android:id="@+id/star_user_name"
                android:textColor="?attr/textColor"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/muted_mark"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_ignored_user_mark"
                app:tint="?attr/textColor"
                android:layout_marginStart="3dp"
                android:layout_gravity="center_vertical"
                android:layout_width="16dp"
                android:layout_height="16dp"/>

        <TextView
                android:id="@+id/star_stars_count"
                android:textSize="14sp"
                android:textColor="@color/starYellow"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
            android:id="@+id/star_comment"
            android:textColor="?attr/textColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/star_name_area"
            android:layout_below="@id/star_name_area"/>


</RelativeLayout>
