<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AppTheme">
        <attr name="dividerColor" format="color"/>
        <attr name="swipeRefreshBackground" format="color"/>
        <attr name="bookmarkDialogBackgroundColor" format="color"/>
        <attr name="bookmarkDialogBackground" format="color|reference"/>
        <attr name="entryCommentBackground" format="color"/>
        <attr name="textColorHint" format="color"/>
        <attr name="bookmarkDetailTopBackground" format="color"/>
        <attr name="tagTextColor" format="color"/>
        <attr name="bookmarkCountColor" format="color"/>

        <!--
            ツールバー背景色を他の部分に共有するために使用
            この値単体ではツールバー背景色は変化しないので注意
        -->
        <attr name="toolbarBackground" format="color"/>

        <!-- browser: 表示中ページの「戻る/進む」履歴項目の背景色 -->
        <attr name="browserBackStackCurrentPageBackground" format="color"/>

        <!-- ToggleButton -->
        <attr name="toggleButtonStyle" format="reference"/>

        <!-- SnackBar -->
        <attr name="snackBarBackgroundColor" format="color"/>
        <attr name="snackBarTextColor" format="color"/>
        <attr name="snackBarActionTextColor" format="color"/>

        <!-- BottomSheetDialog -->
        <attr name="bottomSheetDialogHandleColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="TextFloatingActionButton">
        <attr name="text" format="string"/>
        <attr name="textColor" format="color"/>
        <attr name="backgroundTint" format="color"/>
    </declare-styleable>
</resources>
