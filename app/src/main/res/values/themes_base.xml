        <item name="android:textColorHint">@color/textColorHintDark</item>
        <item name="checkboxStyle">@style/CheckBoxStyle.Dark</item>
    </style>

    <!-- ========= -->

    <!-- BottomSheetDialogのテーマ -->
    <style name="Base.BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="Base.BottomSheetDialogTheme.Light">
        <item name="android:textViewStyle">@style/TextViewStyle.Light</item>
        <item name="editTextStyle">@style/EditTextStyle.Light</item>
        <item name="bottomSheetStyle">@style/BottomSheet.Light</item>
    </style>
    <style name="Base.BottomSheetDialogTheme.Dark">
        <item name="android:textViewStyle">@style/TextViewStyle.Dark</item>
        <item name="editTextStyle">@style/EditTextStyle.Dark</item>
        <item name="bottomSheetStyle">@style/BottomSheet.Dark</item>
    </style>
    <style name="Base.BottomSheetDialogTheme.ExDark">
        <item name="android:textViewStyle">@style/TextViewStyle.ExDark</item>
        <item name="editTextStyle">@style/EditTextStyle.ExDark</item>
        <item name="bottomSheetStyle">@style/BottomSheet.ExDark</item>
        <!-- クリック時背景アニメーション色 -->
        <item name="colorControlHighlight">@color/ripple_material_ex_dark</item>
    </style>
</resources>
