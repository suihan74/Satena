<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <!-- FABのデフォルトスタイル -->
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>

        <!-- ボタンのデフォルトスタイル -->
        <item name="materialButtonStyle">@style/ButtonStyle</item>

        <!-- ダイアログのデフォルトスタイル -->
        <item name="android:alertDialogTheme">@style/AlertDialogStyle</item>

        <!-- enable fragment transition -->
        <item name="android:windowContentTransitions">true</item>

        <!-- Toolbarハンバーガーボタンなどの色 -->
        <item name="android:textColorSecondary">@color/colorPrimaryText</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- action bar area -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>

        <!-- SearchView -->
        <item name="searchViewStyle">@style/SearchViewStyle.Toolbar</item>
        <item name="autoCompleteTextViewStyle">@style/AutoCompleteTextView.Toolbar</item>

        <!-- TabLayout -->
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabTextColor">@color/disabledColor</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>

        <!-- for NumberPicker -->
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <!-- Light Theme -->
    <style name="AppTheme.Light" parent="AppTheme">
        <item name="panelBackground">@color/panelBackground</item>
        <item name="tabBackground">@color/tabBackground</item>
        <item name="textColor">@color/textColor</item>
        <item name="textColorHint">@color/textColorHint</item>
        <item name="dividerColor">@color/dividerColor</item>
        <item name="swipeRefreshBackground">@color/swipeRefreshBackground</item>
        <item name="bookmarkDialogBackground">@color/bookmarkDialogBackground</item>
        <item name="entryCommentBackground">@color/entryCommentBackground</item>
        <item name="bookmarkDetailTopBackground">@color/BookmarkDetailTopBackground</item>

        <item name="android:spinnerStyle">@style/SpinnerStyle.Light</item>
    </style>

    <!-- Dark Theme -->
    <style name="AppTheme.Dark" parent="AppTheme">
        <item name="panelBackground">@color/panelBackgroundDark</item>
        <item name="tabBackground">@color/tabBackgroundDark</item>
        <item name="textColor">@color/textColorDark</item>
        <item name="textColorHint">@color/textColorHintDark</item>
        <item name="dividerColor">@color/dividerColorDark</item>
        <item name="swipeRefreshBackground">@color/swipeRefreshBackgroundDark</item>
        <item name="bookmarkDialogBackground">@color/bookmarkDialogBackgroundDark</item>
        <item name="entryCommentBackground">@color/entryCommentBackgroundDark</item>
        <item name="bookmarkDetailTopBackground">@color/BookmarkDetailTopBackgroundDark</item>

        <item name="android:spinnerStyle">@style/SpinnerStyle.Dark</item>
    </style>

    <!-- 設定画面のトグルボタン -->
    <style name="PreferencesToggleButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@drawable/preferences_toggle_background_selector</item>
        <item name="android:textColor">@drawable/preferences_toggle_text_color_selector</item>
    </style>

    <!-- ブクマ投稿ダイアログ用 -->
    <style name="AppDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <!-- ダイアログのデフォルトスタイル -->
        <item name="android:alertDialogTheme">@style/AlertDialogStyle</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- enable fragment transition -->
        <item name="android:windowContentTransitions">true</item>

        <!-- 画面幅占有比率 -->
        <item name="android:windowMinWidthMajor">@dimen/post_bookmark_dialog_width_ratio</item>
        <item name="android:windowMinWidthMinor">@dimen/post_bookmark_dialog_width_ratio</item>
    </style>

    <!-- Light Theme -->
    <style name="AppDialogTheme.Light" parent="AppDialogTheme">
        <item name="panelBackground">@color/panelBackground</item>
        <item name="tabBackground">@color/tabBackground</item>
        <item name="textColor">@color/textColor</item>
        <item name="textColorHint">@color/textColorHint</item>
        <item name="dividerColor">@color/dividerColor</item>
        <item name="swipeRefreshBackground">@color/swipeRefreshBackground</item>
        <item name="bookmarkDialogBackground">@color/bookmarkDialogBackground</item>
        <item name="entryCommentBackground">@color/entryCommentBackground</item>
    </style>

    <!-- Dark Theme -->
    <style name="AppDialogTheme.Dark" parent="AppDialogTheme">
        <item name="panelBackground">@color/panelBackgroundDark</item>
        <item name="tabBackground">@color/tabBackgroundDark</item>
        <item name="textColor">@color/textColorDark</item>
        <item name="textColorHint">@color/textColorHintDark</item>
        <item name="dividerColor">@color/dividerColorDark</item>
        <item name="swipeRefreshBackground">@color/swipeRefreshBackgroundDark</item>
        <item name="bookmarkDialogBackground">@color/bookmarkDialogBackgroundDark</item>
        <item name="entryCommentBackground">@color/entryCommentBackgroundDark</item>
    </style>

    <!-- ログイン画面のEditText -->
    <style name="LoginEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textCursorDrawable">@color/textCursorDrawable</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
    </style>

    <style name="MastodonLoginEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textCursorDrawable">@color/textCursorDrawable</item>
        <item name="android:textColor">@color/mastodonTextColor</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
    </style>


    <!-- AlertDialog -->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/panelBackground</item>
        <item name="android:textColor">@color/textColor</item>

        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowTitleStyle">@style/AlertDialogTitleStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonBarButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonBarButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/ButtonBarButtonStyle</item>

        <item name="android:windowMinWidthMajor">@dimen/alert_dialog_width_ratio</item>
        <item name="android:windowMinWidthMinor">@dimen/alert_dialog_width_ratio</item>

        <!-- TabLayout -->
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabTextColor">@color/disabledColor</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabBackground">@color/tabBackground</item>
    </style>

    <style name="AlertDialogTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="ButtonBarButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- TabLayout -->
    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@android:style/TextAppearance.Widget.TabWidget</item>
        <item name="tabSelectedTextColor">?attr/tabSelectedTextColor</item>
        <item name="tabIndicatorColor">?attr/tabIndicatorColor</item>
        <item name="tabTextColor">?attr/tabTextColor</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
    </style>

    <!-- Spinner -->
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:dropDownSelector">@color/colorPrimaryText</item>
        <item name="subMenuArrow">@null</item>
        <item name="backgroundTint">@color/colorPrimaryText</item>
    </style>

    <style name="SpinnerStyle.Light" parent="SpinnerStyle">
        <item name="android:popupBackground">@color/panelBackground</item>
    </style>

    <style name="SpinnerStyle.Dark" parent="Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@color/panelBackgroundDark</item>
    </style>

    <!-- Button -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">?android:attr/colorButtonNormal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- FAB -->
    <style name="FloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/colorPrimaryText</item>
        <item name="borderWidth">0dp</item>
        <item name="android:background">@null</item>
    </style>

    <!-- SearchView -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="submitBackground">@android:color/transparent</item>
        <item name="closeIcon">@drawable/ic_baseline_close</item>
        <item name="searchIcon">@drawable/ic_baseline_search</item>
        <item name="searchHintIcon">@drawable/ic_baseline_search</item>
        <item name="commitIcon">@null</item>
        <item name="goIcon">@null</item>
        <item name="textColor">@color/colorPrimaryText</item>
    </style>

    <style name="SearchViewStyle.Toolbar" parent="SearchViewStyle">
        <item name="android:tint">@color/colorPrimaryText</item>
        <item name="textColor">@color/colorPrimaryText</item>
        <item name="autoCompleteTextViewStyle">@style/AutoCompleteTextView.Toolbar</item>
    </style>

    <style name="SearchViewStyle.ThemeColored" parent="SearchViewStyle">
        <item name="closeIcon">@drawable/ic_baseline_close_theme_colored</item>
        <item name="searchIcon">@drawable/ic_baseline_search_theme_colored</item>
        <item name="searchHintIcon">@drawable/ic_baseline_search_theme_colored</item>
        <item name="commitIcon">@drawable/ic_baseline_search_theme_colored</item>
        <item name="goIcon">@drawable/ic_baseline_search_theme_colored</item>
        <item name="autoCompleteTextViewStyle">@style/AutoCompleteTextView.ThemeColored</item>
    </style>

    <!-- SearchView上の文字入力部分 -->
    <style name="AutoCompleteTextView.Toolbar" parent="Widget.AppCompat.AutoCompleteTextView">
        <!-- 入力位置のカーソル -->
<!--        <item name="android:textCursorDrawable">@drawable/searchview_cursor</item>-->
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="AutoCompleteTextView.ThemeColored" parent="Widget.AppCompat.AutoCompleteTextView">
        <!-- 入力位置のカーソル -->
        <item name="android:textCursorDrawable">@null</item>
<!--        <item name="android:textCursorDrawable">@drawable/searchview_cursor_theme_colored</item>-->
    </style>

    <!-- IgnoreTarget @ IgnoredEntryDialog -->
    <style name="IgnoreTargetCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/textColor</item>
    </style>

    <!-- RecyclerView -->
    <style name="RecyclerView">
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>
        <item name="android:scrollbarSize">4dp</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="RecyclerView.Linear" parent="RecyclerView">
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>
</resources>
