<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarStyleExDark" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/panelBackgroundExDark</item>
    </style>

    <style name="ActionBarButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorPrimaryText</item>
    </style>

    <!-- 設定画面のトグルボタン -->
    <style name="ToggleButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@drawable/preferences_toggle_background_selector</item>
        <item name="android:textColor">@drawable/preferences_toggle_text_color_selector</item>
    </style>
    <style name="ToggleButtonStyle.ExDark" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@null</item>
        <item name="android:background">@drawable/button_background_toggle_ex_dark</item>
        <item name="android:textColor">@drawable/preferences_toggle_text_color_selector_ex_dark</item>
    </style>

    <!-- ログイン画面のEditText -->
    <style name="LoginEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textCursorDrawable">@color/textCursorDrawable</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
    </style>

    <style name="MastodonLoginEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textCursorDrawable">@color/textCursorDrawable</item>
        <item name="android:textColor">@color/mastodonTextColor</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
    </style>

    <!-- アラートダイアログのタイトル部分 -->
    <style name="AlertDialogTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">?textColor</item>
    </style>

    <!-- アラートダイアログの下部ボタン -->
    <style name="ButtonBarButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- TabLayout -->
    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabBackground">?attr/tabBackground</item>
        <item name="tabTextAppearance">@android:style/TextAppearance.Widget.TabWidget</item>
        <item name="tabSelectedTextColor">?attr/tabSelectedTextColor</item>
        <item name="tabIndicatorColor">?attr/tabIndicatorColor</item>
        <item name="tabTextColor">?attr/tabTextColor</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
    </style>

    <!-- Spinner -->
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:dropDownSelector">?colorControlHighlight</item>
        <item name="subMenuArrow">@null</item>
    </style>

    <style name="SpinnerStyle.Light">
        <item name="android:popupBackground">@color/panelBackground</item>
    </style>
    <style name="SpinnerStyle.Dark">
        <item name="android:popupBackground">@color/panelBackgroundDark</item>
    </style>
    <style name="SpinnerStyle.ExDark">
        <item name="android:popupBackground">@drawable/dialog_background_ex_dark</item>
    </style>

    <!-- TextView -->
    <style name="TextViewStyle" parent="Widget.AppCompat.TextView"/>
    <style name="TextViewStyle.Light">
        <item name="android:textColor">@color/textColor</item>
        <item name="textColor">@color/textColor</item>
    </style>
    <style name="TextViewStyle.Dark">
        <item name="android:textColor">@color/textColorDark</item>
        <item name="textColor">@color/textColorDark</item>
    </style>
    <style name="TextViewStyle.ExDark">
        <item name="android:textColor">@color/textColorExDark</item>
        <item name="textColor">@color/textColorExDark</item>
    </style>

    <!-- EditText -->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText"/>
    <style name="EditTextStyle.Light">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/textColorHint</item>
    </style>
    <style name="EditTextStyle.Dark">
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textColorHint">@color/textColorHintDark</item>
    </style>
    <style name="EditTextStyle.ExDark">
        <item name="android:textColor">@color/textColorExDark</item>
        <item name="android:textColorHint">@color/textColorHintDark</item>
    </style>

    <!-- Button -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">?android:attr/colorButtonNormal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="ButtonStyle.ExDark">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button_background_ex_dark</item>
        <item name="android:textColor">?textColor</item>
    </style>

    <!-- FAB -->
    <style name="FloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/colorPrimaryText</item>
        <item name="borderWidth">0dp</item>
        <item name="android:background">@null</item>
    </style>

    <!-- SearchView -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="submitBackground">@android:color/transparent</item>
        <item name="closeIcon">@drawable/ic_baseline_close</item>
        <item name="searchIcon">@drawable/ic_baseline_search</item>
        <item name="searchHintIcon">@drawable/ic_baseline_search</item>
        <item name="commitIcon">@null</item>
        <item name="goIcon">@null</item>
        <item name="textColor">@color/colorPrimaryText</item>
    </style>

    <style name="SearchViewStyle.Toolbar">
        <item name="textColor">@color/colorPrimaryText</item>
        <item name="autoCompleteTextViewStyle">@style/AutoCompleteTextView.Toolbar</item>
    </style>

    <!-- SearchView上の文字入力部分 -->
    <style name="AutoCompleteTextView.Toolbar" parent="Widget.AppCompat.AutoCompleteTextView">
        <!-- 入力位置のカーソル -->
<!--        <item name="android:textCursorDrawable">@drawable/searchview_cursor</item>-->
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <!-- CheckBox -->
    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox"/>
    <style name="CheckBoxStyle.Light">
        <item name="colorControlNormal">@color/textColor</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColor">@color/textColor</item>
    </style>
    <style name="CheckBoxStyle.Dark">
        <item name="colorControlNormal">@color/textColorDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/textColorDark</item>
    </style>
    <style name="CheckBoxStyle.ExDark">
        <item name="colorControlNormal">@color/colorPrimaryExDark</item>
        <item name="colorControlActivated">@color/colorPrimaryExDark</item>
        <item name="android:textColor">@color/textColorDark</item>
    </style>

    <!-- RecyclerView -->
    <style name="RecyclerView">
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>
        <item name="android:scrollbarSize">4dp</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="RecyclerView.Linear">
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <!-- MarqueeTextView -->
    <style name="MarqueeTextView" parent="Widget.AppCompat.TextView">
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <!-- スタースパン色 -->
    <style name="StarSpan" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="StarSpan.Yellow">
        <item name="android:textColor">@color/starYellow</item>
    </style>
    <style name="StarSpan.Red">
        <item name="android:textColor">@color/starRed</item>
    </style>
    <style name="StarSpan.Green">
        <item name="android:textColor">@color/starGreen</item>
    </style>
    <style name="StarSpan.Blue">
        <item name="android:textColor">@color/starBlue</item>
    </style>
    <style name="StarSpan.Purple">
        <item name="android:textColor">@color/starPurple</item>
    </style>

    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal"/>
    <style name="BottomSheet.Light">
        <item name="android:background">@drawable/shape_bottom_sheet_rounded_corner</item>
    </style>
    <style name="BottomSheet.Dark">
        <item name="android:background">@drawable/shape_bottom_sheet_rounded_corner_dark</item>
    </style>
    <style name="BottomSheet.ExDark">
        <item name="android:background">@drawable/shape_bottom_sheet_rounded_corner_ex_dark</item>
    </style>
</resources>
