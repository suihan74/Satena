<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/panelBackground"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context=".scenes.bookmarks.BookmarksActivity">

    <LinearLayout
            android:id="@+id/parent_layout"
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/bookmark_detail_layout">

            <RelativeLayout
                    android:id="@+id/user_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">

                <ImageView
                        android:id="@+id/user_icon"
                        android:layout_width="64dp"
                        android:layout_height="64dp"/>

                <TextView
                        android:id="@+id/user_name"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="?attr/textColor"
                        android:gravity="center_vertical"
                        android:textAlignment="gravity"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_alignTop="@id/user_icon"
                        android:layout_alignBottom="@id/user_icon"
                        android:layout_toEndOf="@id/user_icon"/>

            </RelativeLayout>

            <TextView
                    android:id="@+id/comment"
                    android:textSize="14sp"
                    android:textColor="?attr/textColor"
                    android:minHeight="43dp"
                    android:textIsSelectable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_info"
                    android:layout_alignStart="@id/user_info"
                    android:layout_alignEnd="@id/user_info"/>

            <LinearLayout
                    android:id="@+id/tags_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="4dp"
                    android:layout_below="@id/comment"
                    android:layout_alignStart="@id/comment"
                    android:layout_toStartOf="@id/menu_button"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/tag_icon"
                        app:srcCompat="@drawable/ic_tag"
                        android:layout_marginTop="3dp"
                        android:layout_width="14sp"
                        android:layout_height="14sp"/>
                <TextView
                        android:id="@+id/tags"
                        android:textSize="14sp"
                        android:textColor="@color/tagColor"
                        android:textColorLink="@color/tagColor"
                        android:layout_marginStart="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <ImageButton
                    android:id="@+id/menu_button"
                    android:src="@drawable/ic_more_horiz"
                    android:tint="?attr/textColor"
                    android:background="@drawable/control_background_40dp_material"
                    android:layout_alignEnd="@id/comment"
                    android:layout_below="@id/comment"
                    android:layout_marginTop="2dp"
                    android:layout_width="36dp"
                    android:layout_height="36dp"/>
        </RelativeLayout>

        <LinearLayout
                android:id="@+id/stars_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
            <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    style="@style/TabLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            </com.google.android.material.tabs.TabLayout>

            <androidx.viewpager.widget.ViewPager
                    android:id="@+id/tab_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
            android:id="@+id/quote_text_view"
            android:visibility="invisible"
            app:layout_anchor="@id/bookmark_detail_layout"
            app:layout_anchorGravity="bottom"
            android:background="#aa000000"
            android:textColor="?attr/textColor"
            android:textSize="20sp"
            android:paddingStart="8dp"
            android:paddingEnd="108dp"
            android:paddingTop="16dp"
            android:paddingBottom="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <!-- スターボタン -->
    <LinearLayout
            android:id="@+id/yellow_star_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:alpha="0"
            app:layout_anchor="@id/show_stars_button"
            app:layout_anchorGravity="center_horizontal|bottom"
            android:orientation="vertical">

        <TextView
                android:id="@+id/yellow_stars_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/infinite"
                android:textColor="@color/starYellow"
                android:textStyle="bold"
                android:background="@drawable/rounded_corner_textview"
                android:alpha="0"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/yellow_star_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:src="@drawable/ic_star"
                app:backgroundTint="@color/starYellow"
                app:fabSize="mini"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/green_star_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:alpha="0"
            app:layout_anchor="@id/show_stars_button"
            app:layout_anchorGravity="center_horizontal|bottom"
            android:orientation="vertical">

        <TextView
                android:id="@+id/green_stars_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/starGreen"
                android:textStyle="bold"
                android:background="@drawable/rounded_corner_textview"
                android:alpha="0"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/green_star_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:src="@drawable/ic_star"
                app:backgroundTint="@color/starGreen"
                app:fabSize="mini"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/red_star_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:alpha="0"
            app:layout_anchor="@id/show_stars_button"
            app:layout_anchorGravity="center_horizontal|bottom"
            android:orientation="vertical">

        <TextView
                android:id="@+id/red_stars_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/starRed"
                android:textStyle="bold"
                android:background="@drawable/rounded_corner_textview"
                android:alpha="0"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/red_star_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:src="@drawable/ic_star"
                app:backgroundTint="@color/starRed"
                app:fabSize="mini"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/blue_star_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:alpha="0"
            app:layout_anchor="@id/show_stars_button"
            app:layout_anchorGravity="center_horizontal|bottom"
            android:orientation="vertical">

        <TextView
                android:id="@+id/blue_stars_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/starBlue"
                android:textStyle="bold"
                android:background="@drawable/rounded_corner_textview"
                android:alpha="0"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/blue_star_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:src="@drawable/ic_star"
                app:backgroundTint="@color/starBlue"
                app:fabSize="mini"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/purple_star_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:alpha="0"
            app:layout_anchor="@id/show_stars_button"
            app:layout_anchorGravity="center_horizontal|bottom"
            android:orientation="vertical">

        <TextView
                android:id="@+id/purple_stars_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/starPurple"
                android:textStyle="bold"
                android:background="@drawable/rounded_corner_textview"
                android:alpha="0"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/purple_star_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:src="@drawable/ic_star"
                app:backgroundTint="@color/starPurple"
                app:fabSize="mini"/>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/show_stars_button"
            style="@style/Widget.Design.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"
            app:backgroundTint="@color/starMenu"
            app:layout_anchor="@id/parent_layout"
            app:layout_anchorGravity="bottom|end|right"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"/>

    <ProgressBar
            android:id="@+id/detail_progress_bar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_anchor="@id/tab_pager"
            app:layout_anchorGravity="center"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
